journal = {Journal of Experimental Biology},
keywords = {absolute aerobic scope,active metabolic rate,body mass,brown trout,diet,repeatability,salmo trutta,standard metabolic rate},
number = {10},
pages = {1668--1675},
title = {{Repeatability of standard metabolic rate, active metabolic rate and aerobic scope in young brown trout during a period of moderate food availability}},
