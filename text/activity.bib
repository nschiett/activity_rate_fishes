isbn = {0022-0949},
issn = {0022-0949},
journal = {Journal of Experimental Biology},
keywords = {accepted 25 february 2013,critical swimming speed,ecophysiology,maximum metabolic rate,oxygen consumption rate,received 15 november 2012,respirometry,standard metabolic rate},
number = {11},
pages = {2103--2110},
pmid = {23470659},
title = {{Finding the best estimates of metabolic rates in a coral reef fish}},
volume = {216},
year = {2013}
}
